<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/material_white"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/semesterTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="2015-2016春季学期"
            android:textColor="?attr/colorPrimary"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="8dp"
            android:background="@color/defaultShowColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/defaultShowColor"
            android:dividerPadding="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总学科"
                    android:textColor="@color/defaultTextColor"/>

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/sumNumTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="5"
                    android:textColor="@color/defaultTextColor"/>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="32dp"
                android:background="@color/defaultShowColor"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总学分"
                    android:textColor="@color/defaultTextColor"/>

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/sumCreditTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="25.0"
                    android:textColor="@color/defaultTextColor"/>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="32dp"
                android:background="@color/defaultShowColor"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPA"
                    android:textColor="@color/defaultTextColor"/>

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/sumGpaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="3.7"
                    android:textColor="@color/defaultTextColor"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="8dp"
            android:background="@color/defaultShowColor"/>

        <android.support.v7.widget.CardView
            android:id="@+id/extendCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:foreground="@drawable/fg_extend_card"
            app:cardBackgroundColor="@color/defaultLightBackground"
            app:cardCornerRadius="0dp"
            app:cardElevation="1dp">

            <ImageView
                android:tint="?attr/colorPrimary"
                android:id="@+id/extendImageView"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/bg_extend_button"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:rotation="180"
                android:src="@drawable/ic_extend"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/gradeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:minHeight="160dp">
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>