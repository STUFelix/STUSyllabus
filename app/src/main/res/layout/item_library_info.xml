<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/libCardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="3dp"
    android:foreground="@drawable/fg_oa_card"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/material_white"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="1dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/libTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                tools:text="理学院\u201c科学沙龙\u201d系列学术讲座\u2014\u2014 海洋生物学研究新技术"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/libAuthorTextview"
                android:textSize="14sp"
                android:textColor="@color/defaultTextColor"
                android:layout_marginTop="8dp"
                tools:text="陈志德[等]编著"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/libPressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="发展规划办"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/libTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/defaultShowColor"
                    android:textSize="12sp"
                    tools:text="2016-8-23 17:24:51"/>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/libNumStateTextView"
            android:textSize="16sp"
            android:gravity="center"
            android:text="1 / 2"
            android:textStyle="bold"
            android:textColor="@color/material_white"
            android:layout_weight="1"
            android:background="@drawable/bg_lib_num"
            android:layout_width="96dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
</android.support.v7.widget.CardView>