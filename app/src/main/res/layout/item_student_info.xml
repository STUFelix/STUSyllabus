<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defaultLightBackground"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <View
            android:id="@+id/sexView"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_sex"/>

        <TextView
            android:id="@+id/studentNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="48dp"
            android:layout_toRightOf="@id/sexView"
            android:textColor="#2B2B2B"
            android:textSize="16sp"
            tools:text="呆呆杰"/>

        <TextView
            android:id="@+id/studentNoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/studentNameTextView"
            android:gravity="right"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="2013101028"/>

        <TextView
            android:id="@+id/studentMajorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/studentNoTextView"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/studentNameTextView"
            android:gravity="right"
            android:textSize="14sp"
            tools:text="计算机科学与技术"/>
    </RelativeLayout>

    <View
        android:id="@+id/devLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/defaultLineColor"/>


</LinearLayout>