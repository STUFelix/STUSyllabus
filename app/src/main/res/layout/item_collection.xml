<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:id="@+id/cardItemLayout"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:foreground="@drawable/fg_circle_card"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/material_white"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/collectionIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="编号 : 867658"
            android:textColor="@color/defaultTextColor"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/collectionSemesterTextView"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="学期 : 2015-2016 春季学期"
            android:textColor="@color/defaultTextColor"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/collectionNumTextView"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="人数 : 12人"
            android:textColor="@color/defaultTextColor"
            android:textSize="16sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>